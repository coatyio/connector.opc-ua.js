{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "skipLibCheck": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": false,
        "noImplicitAny": false,
        "removeComments": true,
        "rootDir": "src",
        "outDir": "dist",
        "lib": [
            "es6",
            "scripthost"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5"
    },
    "compileOnSave": false
}